<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="es.upm.miw.solitarioCelta"
    android:versionCode="1"
    android:versionName="1.0">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_miw_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_miw_launcher_rounded"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="es.upm.miw.solitarioCelta.MejoresResultados"></activity>
        <activity
            android:name="es.upm.miw.solitarioCelta.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.upm.miw.solitarioCelta.AcercaDe"
            android:label="@string/aboutText"
            android:theme="@android:style/Theme.Material.Dialog.MinWidth">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.upm.miw.solitarioCelta.SCeltaPrefs"
            android:label="@string/preferencesText"
            android:theme="@style/AppTheme">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>